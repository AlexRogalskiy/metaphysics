{
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "jasmine": true,
    "es6": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "camelcase": 0,
    "max-len": [2, 120]
  },
  "ignore": [
    "/flow-typed/npm/*"
  ],
  "globals": {
    "expect": false,
    "runQuery": false,
    "runAuthenticatedQuery": false,
    "schema": false,
    "sinon": false,
    "expectPromiseRejectionToMatch": false
  }
}
