{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "checkJs": false,
    "lib": ["es2017"],
    "module": "commonjs",
    "noEmit": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "./src",
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "build",
    "scripts",
    "peril",
    "__mocks__",
    "node_modules",
    "**/node_modules/*",
    "dangerfile.ts",
    "index.js",
    "jest.config*.js",
    "wallaby.js"
  ]
}
