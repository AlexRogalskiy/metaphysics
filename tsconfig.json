{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "checkJs": false,
    "lib": ["es2017"],
    "module": "commonjs",
    "noEmit": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "./src",
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "include": ["src/types/**/*.d.ts"],
  "exclude": ["build", "node_modules", "**/node_modules/*", "dangerfile.ts"]
}
